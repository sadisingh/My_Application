<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simple1">
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/img1"
        android:background="@drawable/himachal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:textSize="40dp"
        android:text="Himachal pradesh"
        android:layout_toRightOf="@+id/img1"
        android:id="@+id/text1"/>
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/img12"
        android:layout_below="@+id/img1"
        android:background="@drawable/shimla"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:textSize="40dp"
        android:text="Shimla"
        android:layout_toRightOf="@+id/img12"
        android:layout_below="@+id/text1"
        android:id="@+id/text12"/>
    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/img13"
        android:layout_below="@+id/img12"
       android:background="@drawable/botanical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="60dp"
        android:textSize="40dp"
        android:layout_below="@+id/text12"
        android:text="Nainital"
        android:layout_toRightOf="@+id/img13"
        android:id="@+id/text13"/>

</RelativeLayout>