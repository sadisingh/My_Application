<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Moviecationimage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.7"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    card_view:cardCornerRadius="6dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/image1"
                        android:layout_height="200dp"
                        android:background="@drawable/moviecationintent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="210dp"
                        android:text="Business Gift Cards"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="260dp"
                        android:text="Perfect if youâ€™re ordering Gift Cards for a group, clients or customers. Pick a design for any occasion or choose the Gold Custom Card to add words of encouragement, appreciation and celebration.

Gift Cards are available in amounts from $25 to $3,000. You can also write a message to be included with your gift."
                        android:textColor="#40b6c6"
                        android:textStyle="normal"
                        android:textSize="13dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="440dp"
                        android:text="Shop Custom Message Business Gift Cards"
                        android:textColor="#78787c"
                        android:textStyle="normal"
                        android:textSize="13dp" />





                </android.support.v7.widget.CardView>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="#1a2a99"
                    android:textColor="#ffffff"
                    android:text="Shop Business Gift Cards"
                    android:textStyle="bold"

                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>