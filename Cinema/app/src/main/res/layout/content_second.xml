<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="8"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Second"
    tools:showIn="@layout/app_bar_second">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.7"
        android:orientation="horizontal">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardCornerRadius="6dp">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image1"
        android:layout_height="170dp"
        android:background="@drawable/bannergaurav"/>
    </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="5"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/sanju"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/sanjubanner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="132dp"
                android:text="SANJU"
                android:textColor="#060606"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="155dp"
                android:text="(HINDI)(U/A)(Drama)"
                android:textColor="#656664"
                android:textSize="9dp" />
        </android.support.v7.widget.CardView>



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
       <android.support.v7.widget.CardView
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_margin="16dp"
           app:cardCornerRadius="6dp">
           <ImageView
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:background="@drawable/raceeeeee"
               android:id="@+id/race"/>

       </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="6dp"
                    >
                    <ImageView
                        android:layout_width="150dp"
                        android:id="@+id/incred"
                        android:layout_height="150dp"
                        android:background="@drawable/incredibles"
                        />

                </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp">
                <ImageView
                    android:layout_width="150dp"
                    android:id="@+id/ocea"
                    android:layout_height="150dp"
                    android:background="@drawable/oceans"></ImageView>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/jurass"
                    android:background="@drawable/jurassic"
                    />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/women"
                    android:background="@drawable/womenbanner"></ImageView>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/moviea"
                    android:layout_height="150dp"
                    android:background="@drawable/moviecation"></ImageView>


            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/heredit"
                    android:background="@drawable/hereditary"></ImageView>


            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>
    </ScrollView>


</LinearLayout>


