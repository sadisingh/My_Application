<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sanjuimage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.7"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    card_view:cardCornerRadius="6dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/image1"
                        android:layout_height="200dp"
                        android:background="@drawable/sanjuintentimage"/>


                    <TextView
                        android:layout_width="321dp"
                        android:layout_height="239dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="210dp"
                        android:text="Cast"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="250dp"
                        android:text="Sonam Kapoor,Sanjay Dutt,Ranbir Kapoor,Anushka Sharma"
                        android:textColor="#403d3d"
                        android:textStyle="normal"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="290dp"
                        android:text="Director"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="330dp"
                        android:text="Rajkumar Hirani"
                        android:textColor="#403d3d"
                        android:textStyle="normal"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="355dp"
                        android:text="Plot"
                        android:textColor="#000000"
                        android:textSize="30dp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="390dp"
                        android:text="The film will follow Sanjay Dutt's life, mainly through three stages, during his drug addict phase, his many love affairs, and during the phase of his life when he went to jail under TADA case."
                        android:textColor="#403d3d"
                        android:textStyle="normal"
                        android:textSize="13dp" />



                </android.support.v7.widget.CardView>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/buttonone"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="BOOK NOW"
                    android:textStyle="bold"

                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>




</LinearLayout>