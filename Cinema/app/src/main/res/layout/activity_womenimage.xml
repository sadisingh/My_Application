<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Womenimage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5.7"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view1"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    card_view:cardCornerRadius="6dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/image1"
                        android:layout_height="200dp"
                        android:background="@drawable/womenintent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="210dp"
                        android:text="PVR Cinemas makes Wednesday afternoon exclusive for women patrons"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="normal" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="320dp"
                        android:text="India 9 September 2016: PVR Cinemas has introduced a unique initiative of ‘Women on Wednesday’ (WOW) where they have dedicated Wednesday afternoon to all their women patrons. All the ladies can watch latest movies at select cinemas on Wednesday afternoon with their female friends and enjoy complimentary coffee and cookie."
                        android:textColor="#d43dc5"
                        android:textStyle="normal"
                        android:textSize="13dp" />







                </android.support.v7.widget.CardView>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="#991a91"
                    android:textColor="#ffffff"
                    android:text="All Offers"
                    android:textStyle="bold"

                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>